<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<HBox id="mainHBox" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pimpelkram.universalfilefinder.AutocompleteController">
   <children>
      <StackPane id="imageStackPane">
         <children>
            <ImageView id="image" fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/search.png" />
               </image>
               <effect>
                  <GaussianBlur radius="1.0" />
               </effect>
            </ImageView>
            <Button id="dragButton" fx:id="dragButton" minWidth="30.0" mnemonicParsing="false" opacity="0.0" visible="false" />
         </children>
      </StackPane>
      <CustomTextField fx:id="autocomplete" minWidth="300.0" promptText="fileName" />
   </children>
</HBox>
